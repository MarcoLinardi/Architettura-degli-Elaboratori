.data
numero: .word 7
.text
.globl main
main:
	lw $t0,numero
	li $t1,0
Controllo_While:
	bgtz $t0,Blocco_While	#Controlla se $t0>0 + label 
	j Fine_While
Blocco_While:	
	add $t1,$t1,$t0
	sub $t0,$t0,1
	j Controllo_While
Fine_While:
	sw $t1,numero
	li $v0, 1           # Codice di servizio per la stampa di un intero
  	move $a0, $t1       # Carica il valore della somma in $a0
    	syscall
	li $v0,10	    # Codice per terminazione programma
	syscall	