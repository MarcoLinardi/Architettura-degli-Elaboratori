.data
stringa: .asciiz "trentatre trentini entrarorono a trento tutti e trentatre trotterellando"
newline: .asciiz "\n"
new_string: .space 100

.text
.globl main 
main:
	la $t0,stringa
	li $t1,32		#Valore ASCII dello spazio
	la $t2,new_string
	
Loop:
	lb $t3,0($t0)
	beq $t3,$zero,Print
	beq $t3,$t1,Next_char
	addi $t0,$t0,1
	sb $t3,0($t2)
	addi $t2,$t2,1
	j Loop
	
Next_char:
	addi $t0,$t0,1
	j Loop

Print:
	li $v0,4
	la $a0,new_string
	syscall
	li $v0,10
	syscall