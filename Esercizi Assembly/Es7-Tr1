.data

input: .asciiz "Inserisci un numero: "
output: .asciiz "La media Ã¨: "

.text
.globl main
main:
	li $t0,5
	li $t1,0
	
Memorizza_numeri:
	beqz $t0,Stampa_Media
	li $v0,4
	la $a0,input
	syscall
	li $v0,5
	syscall
	move $t2,$v0
	add $t1,$t1,$t2
	subi $t0,$t0,1
	j Memorizza_numeri
	
Stampa_Media:
	div $t3,$t1,5
	li $v0,4
	la $a0,output
	syscall
	move $a0,$t3
	li $v0,1
	syscall
	li $v0,10
	syscall
	
	
	
	
	
	
	
	
