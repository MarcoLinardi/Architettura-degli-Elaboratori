.data
a: .word 20
b: .word 15

.text
.globl main
main:
	lw $t1,a
	lw $t2,b
	li $t0,0
	li $t3,31 	# Contatore per contare dal bit più significativo
	
Compare_Loop:
	# Carica i bit più significativi di a e b
	srlv $s1,$t1,$t3
	srlv $s2,$t2,$t3
	# Confronta i bit
	beq $s1,$s2,Check_next_bit
	bgt $s1,$s2,a_is_greater
	blt $s1,$s2,b_is_greater
Check_next_bit:
	# Decremento il contatore per passare al bit successivo
	subi $t3,$t3,1
	bnez $t3,Compare_Loop
	j end
a_is_greater:
	li $t0,0
	j end
b_is_greater:
	li $t0,1
	j end
end:
	li $v0,10
	syscall
