.data
prompt1: .asciiz "Inserisci un numero intero: "
prompt2: .asciiz "Inserisci la posizione del bit da controllare (da 0 a 31): "

.text
main:
    
    li $v0, 4           # Codice di servizio per la stampa di una stringa
    la $a0, prompt1     # Carica l'indirizzo del prompt1 in $a0
    syscall
    
    li $v0, 5           # Codice di servizio per la lettura di un intero
    syscall
    move $s0, $v0       # Salva il numero letto in $s0
    
    li $v0, 4           # Codice di servizio per la stampa di una stringa
    la $a0, prompt2     # Carica l'indirizzo del prompt2 in $a0
    syscall
    
    li $v0, 5           # Codice di servizio per la lettura di un intero
    syscall
    move $s1, $v0       # Salva la posizione del bit in $s1
    
    # Controlla il valore del bit alla posizione specificata
    srlv $t0, $s0, $s1   # Shift logico a destra di $s1 posizioni
    andi $t0, $t0, 1    # Esegue un AND bit a bit con 1 per isolare il bit di interesse
    
    # Stampa il valore del bit
    li $v0, 1           # Codice di servizio per la stampa di un intero
    move $a0, $t0       # Carica il valore del bit in $a0
    syscall
    
    li $v0, 10
    syscall
