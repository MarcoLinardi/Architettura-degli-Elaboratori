.data

prompt: .asciiz "Inserisci un numero intero: "   # Prompt per l'input
Numero0: .asciiz "Il terzo bit è 0\n"
Numero1: .asciiz "Il terzo bit è 1\n"

.text
.globl main
main:
	li $v0,4
	la $a0,prompt
	syscall

	li $v0,5	
	syscall
	move $s0,$v0

	andi $t0,$s0,4		# Controllo se il terzo bit di $s0 è uguale al terzo bit di 4 (ovvero 1)
	bnez $t0,Positivo

	li $v0,4
	la $a0, Numero0
	syscall
	j Fine

Positivo:
	li $v0,4
	la $a0, Numero1
	syscall 
	j Fine
Fine:
	li $v0,10
	syscall